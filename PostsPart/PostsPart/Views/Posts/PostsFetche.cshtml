@model List<PostsPart.PostTable>

@{
    ViewBag.Title = "PostsFetche";
}

<h2>PostsFetche</h2>

<p>
    @Html.ActionLink("New Post", "Upload")
</p>

<table>
    @{
            int j = 1;
                while (j < Model.Count())
                {
                    if (Model[j].ImageData != null)
                    {
                        <tr>
                        <td>
                            <br/>
                            @Html.DisplayFor(m => Model[j].FileName).ToString()
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].ImageData, 0, Model[j].ImageData.Length)" width="400" />
                        </td>
                        <td>
                            <br />
                            <br />
                        </td>
                    </tr>
                    }
                    if (Model[j].TextPost != null)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => Model[j].TextPost).ToString()
                            </td>
                            <td>
                                <br/>
                                <br/>
                            </td>
                        </tr>
                    }
                    j++;
                }
        }
</table>
